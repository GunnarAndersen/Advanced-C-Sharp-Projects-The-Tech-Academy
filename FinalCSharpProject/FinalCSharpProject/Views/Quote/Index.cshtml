
@using FinalCSharpProject.ViewModels
@model List<ClientsVm>

    
    

<h2>Quote</h2>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Clients</h5>
        </div>
        <div class="card-body">
            @using (var db = new InsuranceEntities())
            {
                var client = new Client();
                var clientQuote = db.Clients.
                                  OrderByDescending(p => p.Id)
                                  .FirstOrDefault();

                int price = clientQuote.Price;



                 <div class="row" align="center">
                    <div class="col" align="center">
                        <h1>Your Price is: @price $ </h1>

                    </div>
                </div>

            }
        </div>
    </div>
</div>